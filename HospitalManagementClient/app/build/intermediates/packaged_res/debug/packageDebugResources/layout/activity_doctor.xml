<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doctor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorActivity">

    <!-- 返回按钮 -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- 医生信息卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/doctorCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 医生基本信息 -->
            <LinearLayout
                android:id="@+id/firstLL"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/dimg"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/doctor_male" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dname"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="王明"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/dlevel"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:text="主治医生"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/dinfo"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="擅长皮肤科疾病，例如荨麻疹、红斑狼疮、湿疹"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 医生详细介绍 -->
            <TextView
                android:id="@+id/secondTV"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/firstLL"
                android:layout_margin="10dp"
                android:text="详细介绍"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ddetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/secondTV"
                android:layout_margin="10dp"
                android:text="医学博士：现就职于湘雅医院，本科与硕士均就读于中南大学湘雅医学院，博士就读于清华大学，曾赴美国担任访问学者"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- 排班详情卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/scheduleCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:minHeight="400dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/doctorCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/scheduleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="排班详情"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_marginBottom="8dp" />

            <!-- 用于动态填充的LinearLayout -->
            <LinearLayout
                android:id="@+id/scheduleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:orientation="vertical" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
